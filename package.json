{
  "name": "current-status",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:kogai/current-status.git"
  },
  "scripts": {
    "test": "$(npm bin)/mocha --recursive --compilers js:babel/register && npm run test:e2e",
    "test:watch": "npm test -- --watch",
    "test:unit": "$(npm bin)/mocha --compilers js:babel/register --watch",
    "start": "$(npm bin)/electron .",
    "init": "$(npm bin)/webdriver-manager update",
    "test:e2e": "npm run test:e2e:build && npm run server:start && $(npm bin)/nightwatch && npm run server:stop",
    "test:e2e:unit": "npm run test:e2e:build && $(npm bin)/nightwatch -t",
    "test:e2e:build": "NODE_ENV=test $(npm bin)/browserify index.js -t babelify -t envify --outfile ./utils/bundle.js",
    "server:start": "$(npm bin)/forever start utils/server.js",
    "server:stop": "$(npm bin)/forever stop 0",
    "package": "$(npm bin)/electron-packager ./ SlackStatus --platform=darwin --arch=x64 --version=0.33.1 --out release/ --overwrite --prune --ignore=release",
    "install:native": "HOME=~/.electron-gyp npm install -S"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babel-runtime": "^5.8.24",
    "bluebird": "^2.10.1",
    "lodash": "^3.10.1",
    "menubar": "^2.2.1",
    "redux": "^3.0.0",
    "store": "^1.3.17",
    "superagent": "^1.4.0",
    "validator": "^4.0.6",
    "vue": "^0.12.15"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "body-parser": "^1.14.0",
    "browserify": "^11.2.0",
    "cookie-parser": "^1.4.0",
    "electron": "^0.4.1",
    "electron-packager": "^5.0.2",
    "electron-prebuilt": "^0.33.1",
    "electron-template-menu": "^1.0.3",
    "envify": "^3.4.0",
    "eslint": "^1.5.1",
    "eslint-config-airbnb": "0.0.8",
    "eslint-plugin-react": "^3.4.2",
    "express": "^4.13.3",
    "forever": "^0.15.1",
    "jsdom": "^6.5.1",
    "mocha": "^2.3.3",
    "mocha-jsdom": "^1.0.0",
    "nightwatch": "^0.8.3",
    "phantomjs": "^1.9.18",
    "power-assert": "^1.0.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "webdriver-manager": "^7.0.1"
  }
}
